<div class="container-fluid">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 640px; height:640px; margin: 0 auto" ; data-interval="false">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Images/DN.jpg" alt="Table For Four" />
            </div>

            @foreach (var couple in ViewBag.AllCouples)
            {
                <div class="item" data-target="#myCarousel" data-slide-to="1">
                    <a href="/Couple/Like/@couple.UserName">
                        <img src="@couple.Image.FilePath" alt="@couple.UserName">
                    </a>
                    <div class="carousel-caption d-none d-md-block">
                        <h2>
                            @Html.ActionLink(" ", "Dislike", "Couple", new { id = @couple.UserName },
                        new { @class = "glyphicon glyphicon-thumbs-down" })

                            <a href="~/c/@couple.UserName" style="color:deeppink">@couple.UserName</a>

                            @Html.ActionLink(" ", "Like", "Couple", new { id = @couple.UserName },
                        new { @class = "glyphicon glyphicon-thumbs-up" })
                        </h2>
                    </div>
                </div>
            }

            <div class="item">
                <img src="~/Images/t44blackside.png" alt="End">
                <div class="carousel-caption d-none d-md-block">
                    <h3>End</h3>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>