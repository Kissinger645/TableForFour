<div class="container-fluid">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="center-block img-fluid" src="~/Images/rnd.png" alt="Table For Four" />
            </div>

            @foreach (var couple in ViewBag.AllCouples)
            {
                <div class="item">
                    <a href="/c/@couple.UserName">
                        <img class="center-block img-fluid"src="@couple.Image.FilePath" alt="@couple.UserName">
                    </a>
                    <div class="carousel-caption d-none d-md-block">
                        <h3>
                            @Html.ActionLink(" ", "Dislike", "Couple", new { id = @couple.UserName },
                        new { @class = "glyphicon glyphicon-thumbs-down" })

                            <a href="/c/@couple.UserName" style="color:deeppink">@couple.UserName</a>

                            @Html.ActionLink(" ", "Like", "Couple", new { id = @couple.UserName },
                        new { @class = "glyphicon glyphicon-thumbs-up" })
                        </h3>
                    </div>
                </div>
            }

            <div class="item">
                <img class="center-block img-fluid" src="~/Images/rnd.png" alt="End">
                <div class="carousel-caption d-none d-md-block">
                    <h4>No more Couples</h4>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>