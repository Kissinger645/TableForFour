@model Dinner.Models.Messages
@{
    ViewBag.Title = "New";
}

<div class="container-fluid">
    <div class="row"><h1></h1></div>
    @using (Html.BeginForm("New", "Message"))
    { 
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 style="color:deeppink" class="panel-title">New Message</h3>
                </div>
                <div class="panel-body">
                    <form role="form" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2" for="coupleTo">To</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@ViewBag.UN</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2">Title</label>
                            <div class="col-sm-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2" for="message">Message</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" }, rows = "8", cols = "50" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Send</button>
                    </form>
                </div>
            </div>
        </div>
    }
        <p><a href="javascript:history.back()">Cancel</a></p>
    </div>