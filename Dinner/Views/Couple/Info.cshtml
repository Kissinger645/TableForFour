
@{
    ViewBag.Title = "Info";
}
<div class="container">

    <h2>
        @ViewBag.ThisCouple.UserName -
        @Html.ActionLink(".", "Like", "Couple", new { id = @ViewBag.ThisCouple.UserName }, new { @class = "glyphicon glyphicon-glass" })
        @ViewBag.Liked
    </h2>
    <h2>@ViewBag.Match</h2>
    <div>
        <div class="photobox">
            <img class="thumb" src="@ViewBag.ThisCouple.Image.FilePath" width="600" height="400" />
        </div>
    </div>
    <div>
        <h4>About us...</h4>
        <h5>@ViewBag.ThisCouple.Bio</h5>
    </div>
</div>
