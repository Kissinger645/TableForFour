
@{
    ViewBag.Title = "Info";
}
<div class="container-fluid">

    <h3 style="color:deeppink;">@ViewBag.Match</h3>
    <div>
        <div class="photobox">
            <img class="thumb" src="@ViewBag.ThisCouple.Image.FilePath" width="320" height="320" />
        </div>
    </div>
    <div>
        <h3 style="color:deeppink;">
            @Html.ActionLink(" ", "Dislike", "Couple", new { id = @ViewBag.ThisCouple.UserName },
           new { @class = "glyphicon glyphicon-thumbs-down" })
            @ViewBag.ThisCouple.UserName
            @Html.ActionLink(" ", "Like", "Couple", new { id = @ViewBag.ThisCouple.UserName },
           new { @class = "glyphicon glyphicon-thumbs-up" })
        </h3>
        <p>@ViewBag.Liked</p>
        <h6>@ViewBag.ThisCouple.Bio</h6>
        <p>Restaurants we like: @ViewBag.ThisCouple.FavoriteFoods</p>
        <p>Prefer to spend: @ViewBag.ThisCouple.PricePreference</p>
        <p>Live in @ViewBag.ThisCouple.ZipCode</p>
        <p><a href="javascript:history.back()">Back</a></p>
        
    </div>
</div>
